#:kivy 2.3.0

<LoginScreenView>

    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {'top': 1}
        adaptive_height: True
        padding: dp(50)
        spacing: dp(25)

        Image:
            pos_hint: {'center_x': .5}
            size_hint: None, None
            size: 125, 125
            source: './assets/logo.png'

        MDLabel:
            font_style: 'Display'
            role: 'small'
            halign: 'center'
            bold: True
            adaptive_height: True
            text: "Авторизация"

        MDTextField:
            mode: "outlined"
            font_style: 'Title'
            role: 'large'
            on_text: root.controller.set_user_data('username', self.text)

            MDTextFieldHintText:
                text: 'Логин'

            MDTextFieldLeadingIcon:
                icon: "account"

        MDTextField:
            mode: "outlined"
            font_style: 'Title'
            role: 'large'
            on_text: root.controller.set_user_data('password', self.text)
            
            MDTextFieldHintText:
                text: 'Пароль'

            MDTextFieldLeadingIcon:
                icon: "lock"

        MDButton:
            style: 'filled'
            theme_width: 'Custom'
            size_hint_x: 1
            on_release: root.controller.login_button_click()

            MDButtonText:
                font_style: 'Title'
                role: 'large'
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'Войти'
    
    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {'center_x': .5, 'y': 0.05}
        adaptive_height: True
        spacing: dp(0)

        MDLabel:
            theme_text_color: 'Custom'
            text_color: app.theme_cls.secondaryColor
            adaptive_height: True
            halign: 'center'
            text: 'Автор: Захаров Богдан (44ИС-21)'
        
        MDLabel:
            theme_text_color: 'Custom'
            text_color: app.theme_cls.secondaryColor
            adaptive_height: True
            halign: 'center'
            text: 'Версия: R1.0'