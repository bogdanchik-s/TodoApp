#:kivy 2.3.0

<MainScreenView>

    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {'top': 1}
        adaptive_height: True
        spacing: dp(15)

        MDTopAppBar:
            id: actions_bar
            type: "small"

            MDTopAppBarLeadingButtonContainer:

                MDActionTopAppBarButton:
                    icon: "home"

            MDTopAppBarTitle:
                text: 'Список дел'
            
            MDTopAppBarTrailingButtonContainer:
                id: actions_buttons

                MDActionTopAppBarButton:
                    id: add_task_action
                    icon: "plus"
                    on_release: root.controller.create_task()
                
                MDActionTopAppBarButton:
                    id: edit_task_action
                    icon: "pencil"
                    on_release: root.controller.edit_task()
                    disabled: True
                
                MDActionTopAppBarButton:
                    id: delete_task_action
                    icon: "trash-can-outline"
                    on_release: root.controller.delete_task()
                    disabled: True
        MDList:
            id: tasks_list
            padding: dp(15), dp(0)
            spacing: dp(10)
